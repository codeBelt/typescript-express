{
  "name": "typescript-express",
  "version": "1.0.0",
  "repository": "https://github.com/codeBelt/typescript-express.git",
  "author": "Robert S. code@codebelt.com",
  "license": "MIT",
  "private": false,
  "scripts": {
    "---------- HELPERS -----------------------------------------------------------------------------": "",
    "remove": "rimraf ./dist",
    "copyViews": "cpx './src/views/**/*' './dist/views' --watch",
    "copyPublic": "cpx './src/public/**/*' './dist/public' --watch",
    "buildServer": "tsc",
    "watchServer": "tsc -watch",
    "removeAndBuildServer": "npm run remove && npm run buildServer",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "---------- DEVELOPMENT -------------------------------------------------------------------------": "",
    "predev": "npm run removeAndBuildServer",
    "dev": "npm run copyPublic & npm run copyViews & npm run watchServer & npm run devServer",
    "devWindows": "concurrently --kill-others \"npm run watchServer\" \"npm run devServer\"",
    "devServer": "cross-env NODE_ENV=development nodemon ./dist/index.js",
    "---------- STAGING -----------------------------------------------------------------------------": "",
    "prestaging:build": "npm run removeAndBuildServer",
    "staging:build": "cross-env NODE_ENV=staging",
    "staging": "npm run staging:build && npm run start",
    "---------- PRODUCTION --------------------------------------------------------------------------": "",
    "preprod:build": "npm run removeAndBuildServer",
    "prod:build": "cross-env NODE_ENV=production",
    "prod": "npm run prod:build && npm run start",
    "---------- TESTING -----------------------------------------------------------------------------": "",
    "test": "npm run lint",
    "lint": "tslint 'src/**/*.ts{,x}' --exclude 'src/_declare/**/*'",
    "unit": "jest",
    "------------------------------------------------------------------------------------------------": ""
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "cookie-parser": "1.4.3",
    "errorhandler": "1.5.0",
    "express": "4.16.2",
    "method-override": "2.3.10",
    "morgan": "1.9.0",
    "nconf": "0.10.0",
    "nunjucks": "3.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/cookie-parser": "1.4.1",
    "@types/errorhandler": "0.0.32",
    "@types/method-override": "0.0.31",
    "@types/morgan": "1.7.35",
    "@types/node": "9.4.0",
    "@types/nunjucks": "3.0.0",
    "concurrently": "3.5.1",
    "cpx": "1.5.0",
    "cross-env": "5.1.3",
    "nodemon": "1.14.11",
    "rimraf": "2.6.2",
    "tslint-consistent-codestyle": "1.11.0",
    "typescript": "2.6.2",
    "vrsource-tslint-rules": "5.8.0"
  }
}
